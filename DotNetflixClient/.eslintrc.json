{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:import/recommended"
    ],
    "rules": {
        "array-bracket-spacing": "warn",
        "arrow-spacing": "warn",
        "no-var": "warn",
        "no-debugger": "warn",
        "react/react-in-jsx-scope": "off",
        "react-hooks/exhaustive-deps": "warn",
        "import/no-unresolved": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true
    }
}