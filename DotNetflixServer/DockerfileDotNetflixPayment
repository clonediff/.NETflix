FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["DotNetflix.Payment/DotNetflix.Payment.csproj", "DotNetflix.Payment/"]
RUN dotnet restore "DotNetflix.Payment/DotNetflix.Payment.csproj"
COPY . .
WORKDIR "/src/DotNetflix.Payment"
RUN dotnet build "DotNetflix.Payment.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "DotNetflix.Payment.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DotNetflix.Payment.dll"]
