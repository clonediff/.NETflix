FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["DotNetflix.Storage/DotNetflix.Storage.csproj", "DotNetflix.Storage/"]
RUN dotnet restore "DotNetflix.Storage/DotNetflix.Storage.csproj"
COPY . .
WORKDIR "/src/DotNetflix.Storage"
RUN dotnet build "DotNetflix.Storage.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DotNetflix.Storage.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DotNetflix.Storage.dll"]
