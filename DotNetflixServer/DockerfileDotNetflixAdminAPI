#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

ADD ./Domain/jsons /Domain/jsons
ADD ./https/aspnetapp.pfx /https/aspnetapp.pfx

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["DotNetflixAdminAPI/DotNetflixAdminAPI.csproj", "DotNetflixAdminAPI/"]
RUN dotnet restore "DotNetflixAdminAPI/DotNetflixAdminAPI.csproj"
COPY . .
WORKDIR "/src/DotNetflixAdminAPI"
RUN dotnet build "DotNetflixAdminAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DotNetflixAdminAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DotNetflixAdminAPI.dll"]